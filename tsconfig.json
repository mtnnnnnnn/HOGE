{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "noLib": false,
    "outDir": "./build",
    "preserveConstEnums": false,
    "suppressImplicitAnyIndexErrors": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "newLineCharacter": "\r\n",
    "convertTabsToSpaces": true
  },
  "compileOnSave": true,
  "filesGlob": [
    "./src/**/*.ts",
    "./typings/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "files": [
    "./src/components/Enviroment/Enviroment.ts",
    "./src/components/Enviroment/History.ts",
    "./src/components/File/ConvertSetting.ts",
    "./src/components/File/FileSaver.ts",
    "./src/components/File/FileUploader.ts",
    "./src/components/File/ImageLoader.ts",
    "./src/components/HTML/InputWrapper.ts",
    "./src/components/Image/CanvasImage.ts",
    "./src/components/Image/ImageFactory.ts",
    "./src/components/Setting/BaseEditer.ts",
    "./src/components/Setting/Editer.ts",
    "./src/components/Setting/Eracer.ts",
    "./src/components/Setting/Mover.ts",
    "./src/components/Setting/Setting.ts",
    "./src/main.ts",
    "./typings/chrome/chrome.d.ts",
    "./typings/FileSaver/FileSaver.d.ts",
    "./typings/filesystem/filesystem.d.ts",
    "./typings/filewriter/filewriter.d.ts",
    "./typings/jquery/jquery.d.ts",
    "./typings/jqueryui/jqueryui.d.ts",
    "./typings/jszip/jszip.d.ts",
    "./typings/node/node.d.ts",
    "./typings/promise/promise.d.ts",
    "./typings/tsd.d.ts",
    "./typings/webrtc/MediaStream.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
